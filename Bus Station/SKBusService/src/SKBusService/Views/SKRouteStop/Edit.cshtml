@model SKBusService.Models.RouteStop
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Edit for " + Context.Session.GetString("busRouteCode") + "-" + Context.Session.GetString("routeName");
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-route-BusRouteCode="@ViewData["BusRouteCode"]">
    <div class="form-horizontal">
        <h4>RouteStop</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RouteStopId" />
        <div class="form-group">
            <label asp-for="BusStopNumber" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="BusStopNumber" class="form-control" asp-items="ViewBag.BusStopNumber"></select>
                <span asp-validation-for="BusStopNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OffsetMinutes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OffsetMinutes" class="form-control" />
                <span asp-validation-for="OffsetMinutes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
